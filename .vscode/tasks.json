{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I", "${workspaceFolder}/include",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/secure_crypt",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task to build the C++ project."
        }
    ]
}
